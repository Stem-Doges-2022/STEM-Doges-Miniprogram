/* miniprogram/pages/index/index.wxss */
.leaderboard{
  position: absolute;
  margin-left: 7.5%;
  margin-top: 10%;
  width:85%;
  height:90vh;
  background-color: rgba(0, 0, 0, 0.658);
  border-radius: 10px;
}

.leaderboardTop{
  top:0%;
  position: absolute;
  width:100%;
  background-color:white;
   border-top-left-radius: 10px;
   border-top-right-radius: 10px;
}


.yourRank{
  width: 100%;
  margin-top:calc(10vh - 30px);
  text-align: center;
}

.bar{
  position: absolute;
  width: 100%;
  height:2px;
  background-color:black;
}

.username{
  position: absolute;
  left:20px;
  color:white;
}

.userpoints{
  position: absolute;
  right:20px;
  
  color:white;
}

.userarea{
  margin-top:10px;
}

.loginPopup{
  width: 50%;
  height:50%;

}

.mini{
  height: 50%;
  width: calc(100% - 50px);
  min-width: 250px;
  max-width: 500px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 20px;
  text-align: center;
}

.popup{
  background: white;
  z-index: 91;
  position: fixed;
}

.overlay {
  height: 100vh;
  width: 100vw;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 90;
}


.background{
  width: 100%;
  height: 100%;
  position: absolute;
  align-self: center;
  object-fit: cover;
}


.inputArea{
  background-color: rgba(117, 117, 117, 0.377);
  width: 50%;
  height: 30px;
  margin-left:25%;
  color: black;
  margin-top: 10px;
}